<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@id/rv_back_level_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <android.support.v7.widget.RecyclerView
            android:id="@id/rv_middle_level_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <android.support.v7.widget.RecyclerView
            android:id="@id/rv_front_level_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    <android.support.v7.widget.RecyclerView
            android:id="@id/rv_line"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_alignLeft="@id/rv_main_homework"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:paddingLeft="135.0dip"
            android:paddingRight="80.0dip" />

    <android.support.v7.widget.RecyclerView
            android:id="@id/rv_main_homework"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:paddingLeft="55.0dip" />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@id/iv_back_today_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="110.0dip"
            android:layout_marginBottom="20.0dip"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/main/arrow/data.json"
            app:lottie_imageAssetsFolder="lottie/main/arrow/images"
            app:lottie_loop="true"
            app:lottie_scale="0.5" />

    <com.airbnb.lottie.LottieAnimationView
            android:id="@id/iv_back_today_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="255.0dip"
            android:layout_marginBottom="20.0dip"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/main/arrow_right/data.json"
            app:lottie_imageAssetsFolder="lottie/main/arrow_right/images"
            app:lottie_loop="true"
            app:lottie_scale="0.5" />
</RelativeLayout>